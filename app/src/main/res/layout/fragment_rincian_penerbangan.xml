<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.rincianpenerbangan.RincianPenerbanganFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/darkblue05"
            app:layout_anchor="@+id/constraintLayout"
            app:layout_anchorGravity="center"
            app:navigationIcon="@drawable/ic_back_white"
            app:title="Rincian Penerbangan"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/app_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/constraintLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDestinasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jakarta -> Melbourne "
                android:textSize="16sp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/darkblue05"
                android:layout_marginTop="10dp"
                android:layout_marginStart="23dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/estimasiWaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(4h 0m)"
                android:textColor="@color/neutral05"
                android:textSize="16sp"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvDestinasi"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRincianPenerbangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:itemCount="1"
                tools:listitem="@layout/item_rincian_penerbangan"
                app:layout_constraintTop_toBottomOf="@id/estimasiWaktu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvRincianHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rincian Harga"
                android:textColor="@color/neutral05"
                android:textSize="14sp"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginTop="14dp"
                android:layout_marginStart="18dp"
                app:layout_constraintTop_toBottomOf="@id/rvRincianPenerbangan"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/typePassengerAdult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Adults"
                android:textSize="14sp"
                android:textColor="@color/neutral05"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvRincianHarga"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/setHargaAdult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 9.550.000"
                android:textSize="14sp"
                android:textColor="@color/neutral05"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRincianHarga"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/typePassengerBaby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Adults"
                android:textSize="14sp"
                android:textColor="@color/neutral05"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/typePassengerAdult"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/setHargaBaby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 9.550.000"
                android:textSize="14sp"
                android:textColor="@color/neutral05"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/setHargaAdult"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/typePassengerKids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Adults"
                android:textSize="14sp"
                android:textColor="@color/neutral05"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/typePassengerBaby"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/setHargaKids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 9.550.000"
                android:textSize="14sp"
                android:textColor="@color/neutral05"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/setHargaBaby"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tax"
                android:textSize="14sp"
                android:textColor="@color/neutral05"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/typePassengerKids"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/setHargaTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 9.550.000"
                android:textSize="14sp"
                android:textColor="@color/neutral05"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/setHargaKids"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvPromo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promo"
                android:textSize="14sp"
                android:textColor="@color/neutral05"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvTax"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/setHargaPromo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 9.550.000"
                android:textSize="14sp"
                android:textColor="@color/neutral05"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/setHargaTax"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <View
            android:id="@+id/horizontalView4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="@color/neutral02"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textSize="16sp"
            android:textColor="@color/neutral05"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginTop="9dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalView4"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/setHargaTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDR 9.550.000"
            android:textSize="18sp"
            android:textColor="@color/darkblue04"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horizontalView4"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLanjutPembayaran"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            app:cornerRadius="16dp"
            android:text="@string/lanjut_pembayaran"
            android:textAllCaps="false"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppinsregular"
            android:backgroundTint="@color/darkblue04"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTotal"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>