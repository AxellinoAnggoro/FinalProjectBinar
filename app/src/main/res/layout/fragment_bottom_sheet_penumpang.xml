<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.bottomsheetpenumpang.BottomSheetPenumpangFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_24"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/horizontalLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal"
            android:background="@color/neutral02"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/ivClose"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icAdult"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_adult"
            android:layout_marginTop="18dp"
            android:layout_marginStart="23dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalLine"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDewasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dewasa"
            android:textSize="14sp"
            android:textColor="@color/neutral05"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalLine"
            app:layout_constraintStart_toEndOf="@id/icAdult"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv12TahunKeatas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(12 tahun keatas)"
            android:textSize="14sp"
            android:textColor="@color/neutral03"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="4dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvDewasa"
            app:layout_constraintStart_toEndOf="@id/icAdult"/>
        
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icMinus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_minus"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalLine"
            app:layout_constraintEnd_toStartOf="@id/input"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/input"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/radius_input"
            android:textColor="@color/neutral05"
            android:textSize="14sp"
            android:gravity="center"
            android:text="0"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalLine"
            app:layout_constraintEnd_toStartOf="@id/icPlus"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icPlus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_plus"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalLine"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/horizontalLine2"
            android:layout_width="370dp"
            android:layout_height="2dp"
            android:orientation="horizontal"
            android:background="@color/neutral02"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv12TahunKeatas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icChild"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_child"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalLine2"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvAnak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anak"
            android:textSize="14sp"
            android:textColor="@color/neutral05"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalLine2"
            app:layout_constraintStart_toEndOf="@id/icAdult"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv2sampai11Tahun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(2-11 tahun)"
            android:textSize="14sp"
            android:textColor="@color/neutral03"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="4dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvAnak"
            app:layout_constraintStart_toEndOf="@id/icAdult"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icMinus2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_minus"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalLine2"
            app:layout_constraintEnd_toStartOf="@id/input2"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/input2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/radius_input"
            android:textColor="@color/neutral05"
            android:textSize="14sp"
            android:gravity="center"
            android:text="0"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalLine2"
            app:layout_constraintEnd_toStartOf="@id/icPlus2"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icPlus2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_plus"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalLine2"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/horizontalLine3"
            android:layout_width="370dp"
            android:layout_height="2dp"
            android:orientation="horizontal"
            android:background="@color/neutral02"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv2sampai11Tahun"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icBaby"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baby"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalLine3"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvBayi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bayi"
            android:textSize="14sp"
            android:textColor="@color/neutral05"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalLine3"
            app:layout_constraintStart_toEndOf="@id/icBaby"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDibawah2Tahun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Dibawah 2 tahun)"
            android:textSize="14sp"
            android:textColor="@color/neutral03"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="4dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvBayi"
            app:layout_constraintStart_toEndOf="@id/icBaby"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icMinus3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_minus"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalLine3"
            app:layout_constraintEnd_toStartOf="@id/input3"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/input3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/radius_input"
            android:textColor="@color/neutral05"
            android:textSize="14sp"
            android:gravity="center"
            android:text="0"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalLine3"
            app:layout_constraintEnd_toStartOf="@id/icPlus3"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icPlus3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_plus"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalLine3"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/horizontalLine4"
            android:layout_width="370dp"
            android:layout_height="2dp"
            android:orientation="horizontal"
            android:background="@color/neutral02"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvDibawah2Tahun"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="147dp"
            app:cornerRadius="16dp"
            android:text="@string/simpan"
            android:fontFamily="@font/poppinsregular"
            android:textAllCaps="false"
            android:backgroundTint="@color/darkblue04"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalLine4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>